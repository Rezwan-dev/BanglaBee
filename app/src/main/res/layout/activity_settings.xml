<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/accent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:paddingTop="24dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/toolbar">
        <ImageView
            android:padding="4dp"
            android:id="@+id/backBtn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/back_arrow"
            android:layout_centerVertical="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:layout_centerInParent="true"
            android:textStyle="normal|bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <com.banglabee.RoundedImage
            android:id="@+id/profile_pic"
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:src="@drawable/pro_pic_4_old" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="@android:color/white"
                android:textStyle="normal|italic"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/name_tv"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_bg"
                android:text="Player"
                android:padding="8dp"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Difficulty"
                android:textColor="@android:color/white"
                android:textStyle="normal|italic"
                android:textSize="12sp" />

            <com.hariofspades.incdeclibrary.IncDecImageButton
                android:id="@+id/incdec"
                android:layout_width="200dp"
                android:layout_height="36dp"
                app:leftButtonColorTintB="@color/colorPrimaryDark"
                app:leftDrawableB="@drawable/dec_ic"
                app:leftDrawableTintB="@color/white"
                app:rightButtonColorTinitB="@color/colorPrimary"
                app:rightDrawableB="@drawable/inc_ic"
                app:rightDrawableTintB="@color/white"
                app:textColorB="@color/white"
                app:textSize="44" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quiz Size"
                android:textColor="@android:color/white"
                android:textStyle="normal|italic"
                android:textSize="12sp" />

            <com.hariofspades.incdeclibrary.IncDecImageButton
                android:id="@+id/incdec2"
                android:layout_width="200dp"
                android:layout_height="36dp"
                app:leftButtonColorTintB="@color/colorPrimaryDark"
                app:leftDrawableB="@drawable/dec_ic"
                app:leftDrawableTintB="@color/white"
                app:rightButtonColorTinitB="@color/colorPrimary"
                app:rightDrawableB="@drawable/inc_ic"
                app:rightDrawableTintB="@color/white"
                app:textColorB="@color/white"
                app:textSize="44" />
        </LinearLayout>
        <TextView
            android:layout_marginTop="16dp"
            android:textAlignment="center"
            android:padding="8dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Rate Us"
            android:background="@drawable/circle_bg"/>
        <TextView
            android:id="@+id/aboutUs"
            android:layout_marginTop="16dp"
            android:textAlignment="center"
            android:padding="8dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="About Us"
            android:background="@drawable/circle_bg"/>

        <com.facebook.login.widget.LoginButton
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp" />


    </LinearLayout>

</RelativeLayout>
