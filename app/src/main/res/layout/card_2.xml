<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    card_view:cardBackgroundColor="#FFFFFF"
    card_view:cardCornerRadius="@dimen/card_corner_radius"
    card_view:cardElevation="3dp"
    card_view:cardPreventCornerOverlap="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTv"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@color/toolbar"
                android:hint=""
                android:textColor="#7FB685"
                android:textSize="32sp"
                android:textStyle="bold" />

            <com.dd.morphingbutton.MorphingButton
                android:id="@+id/morph"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:background="@color/blue"
                android:text="Submit"
                android:textColor="@color/white" />


        </LinearLayout>


        <TextView
            android:id="@+id/bn_pos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bæ/bae is a Danish word for poop. Also used by people on the internet who think it means baby, sweetie etc."
            android:textColor="#426A5A"
            android:textSize="18sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/en_pos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bæ/bae is a Danish word for poop. Also used by people on the internet who think it means baby, sweetie etc."
            android:textColor="#426A5A"
            android:textSize="18sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/bn_syn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bæ/bae is a Danish word for poop. Also used by people on the internet who think it means baby, sweetie etc."
            android:textColor="#426A5A"
            android:textSize="18sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/en_syn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bæ/bae is a Danish word for poop. Also used by people on the internet who think it means baby, sweetie etc."
            android:textColor="#426A5A"
            android:textSize="18sp"
            android:textStyle="bold|italic" />


    </LinearLayout>


</android.support.v7.widget.CardView>