<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:clipChildren="false"
    android:clipToPadding="false">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="true"
        card_view:cardBackgroundColor="#2D3047"
        card_view:cardCornerRadius="@dimen/card_corner_radius"
        card_view:cardElevation="3dp"
        card_view:cardPreventCornerOverlap="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <ImageView
                    android:id="@+id/afterExplode"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <tyrantgit.explosionfield.ExplosionField
                    android:id="@+id/explosion"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true" />

                <ImageView
                    android:id="@+id/makeExplode0"
                    android:layout_width="48dp"
                    android:layout_height="96dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="110dp"
                    android:padding="8dp"
                    android:src="@drawable/party_1" />

                <ImageView
                    android:id="@+id/makeExplode3"
                    android:layout_width="48dp"
                    android:layout_height="96dp"
                    android:padding="8dp"
                    android:src="@drawable/baloon1"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/makeExplode0"
                    android:layout_toEndOf="@+id/makeExplode0"
                    android:layout_marginLeft="24dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="27dp" />

                <ImageView
                    android:id="@+id/makeExplode2"
                    android:layout_width="48dp"
                    android:layout_height="96dp"
                    android:padding="8dp"
                    android:src="@drawable/party_3"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_below="@+id/makeExplode1"
                    android:layout_toRightOf="@+id/makeExplode5"
                    android:layout_toEndOf="@+id/makeExplode5" />

                <ImageView
                    android:id="@+id/makeExplode4"
                    android:layout_width="48dp"
                    android:layout_height="96dp"
                    android:padding="8dp"
                    android:src="@drawable/party_2"
                    android:layout_above="@+id/makeExplode2"
                    android:layout_toRightOf="@+id/makeExplode5"
                    android:layout_toEndOf="@+id/makeExplode5" />

                <ImageView
                    android:id="@+id/makeExplode5"
                    android:layout_width="48dp"
                    android:layout_height="96dp"
                    android:padding="8dp"
                    android:src="@drawable/party_1"
                    android:layout_marginLeft="39dp"
                    android:layout_marginStart="39dp"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/makeExplode1"
                    android:layout_toEndOf="@+id/makeExplode1" />

                <ImageView
                    android:id="@+id/makeExplode1"
                    android:layout_width="48dp"
                    android:layout_height="96dp"
                    android:padding="8dp"
                    android:src="@drawable/baloon2"
                    android:layout_marginLeft="18dp"
                    android:layout_marginStart="18dp"
                    android:layout_alignTop="@+id/makeExplode3"
                    android:layout_toRightOf="@+id/makeExplode3"
                    android:layout_toEndOf="@+id/makeExplode3"
                    android:layout_marginTop="21dp" />

                <ImageView
                    android:id="@+id/makeExplode6"
                    android:layout_width="48dp"
                    android:layout_height="96dp"
                    android:padding="8dp"
                    android:src="@drawable/baloon1"
                    android:layout_below="@+id/makeExplode3"
                    android:layout_toRightOf="@+id/makeExplode1"
                    android:layout_toEndOf="@+id/makeExplode1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_centerInParent="true">

                    <com.example.rezwan.spellingc.RoundedImage
                        android:layout_width="98dp"
                        android:layout_height="98dp"
                        android:src="@drawable/pro_pic_4"
                        app:border_width="2dp"
                        app:border_color="@color/white"/>

                    <TextView
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Congrats"
                        android:textColor="@android:color/white"
                        android:textSize="24sp"
                        android:textStyle="normal|bold" />

                    <TextView
                        android:layout_marginBottom="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Your Name Here"
                        android:textColor="@android:color/white"
                        android:textSize="24sp"
                        android:textStyle="normal|bold" />


                    <TextView
                        android:layout_marginBottom="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Score: 0 / 15"
                        android:textColor="@android:color/white"
                        android:textSize="24sp"
                        android:textStyle="normal|bold" />


                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="16dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="OK"/>

                <TextView
                    android:padding="16dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Share"/>
            </LinearLayout>

        </LinearLayout>






    </android.support.v7.widget.CardView>
</RelativeLayout>